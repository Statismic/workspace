        };

        var regline = {
            x: [0, 10],
            y: [4.8, 7],
            mode: 'lines',
            type: 'scatter',
            name: 'regression line',
        };

        var data = [trace1, regline];
        var layout = {
            xaxis: {
                range: [0, 10.5]
            },
            yaxis: {
                range: [0, 10.5]
            },
            title: 'Scatterplot'
        };
        Plotly.newPlot('scatter', data, layout);
    </script>

