                x: [1, 2, 3, 4, 5, 6, 7, 8, 9, 4.5],
                y: [6, 1.5, 3.6, 4, 3.9, 9.5, 5, 10, 8, 6.4],
                mode: 'markers',
                type: 'scatter',
            };

            var data = [trace1];
            var layout = {
                xaxis: {
                    range: [0, 10]
                },
                yaxis: {
                    range: [0, 10.5]
                },
                title: 'What is r for this scatterplot?'
            };
            Plotly.newPlot('myDiv', data, layout);
        </script>

